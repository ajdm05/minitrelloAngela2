@{
    PageData["title"] = "MiniTrello | Add Organization";
}

<div class="row" ng-show="hasError">
    <p>{{errorMessage}}</p>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Add a New Organization</h2>
                <hr class="colorgraph">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="title" id="title" ng-model="CreateNewOrganizationModel.Title" class="form-control input-lg" placeholder="Title" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="description" id="description" ng-model="CreateNewOrganizationModel.Description" class="form-control input-lg" placeholder="Description" tabindex="2">
                    </div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <button type="submit" ng-click="createNewOrganizationForLoggedUser()" class="btn btn-primary btn-block btn-lg" tabindex="7">Add Organization</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
