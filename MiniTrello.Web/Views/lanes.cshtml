@{
    PageData["title"] = "MiniTrello | Lanes";
}
<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-2">
            <form role="form">
                <fieldset>
                    <h2>Add a New Lane</h2>
                    <hr class="colorgraph">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="title" id="title" ng-model="CreateNewLaneModel.Title" class="form-control input-lg" placeholder="Title" tabindex="1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <button type="submit" ng-click="createNewLaneForLoggedUser()" class="btn btn-primary btn-block btn-lg" tabindex="7">Add Lane</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row" ng-repeat="lane in lanes">
        <div class="col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <img src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" alt="bootsnipp"
                             class="img-rounded img-responsive" />
                    </div>
                    <div class="col-xs-9 col-md-9 section-box">
                        <a href="/cards/{{lane.Id}}">
                            <h2>
                                {{lane.Title}}
                            </h2>
                        </a>
                        <hr />
                        <a href="/addCard" class="btn btn-link pull-left">Add Card</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
