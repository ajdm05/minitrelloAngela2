@{
    PageData["title"] = "MiniTrello | Forgot Password";
}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <h2>Oh-oh! Please Write your Email <small> We'll send you a link to change your password.</small></h2>
            <hr class="colorgraph">
            <div class="row">   
            </div>
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" ng-model="registerModel.Email" tabindex="4">
            </div>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <button type="submit" ng-click="register()" class="btn btn-primary btn-block btn-lg" tabindex="7">Send Email</button>
                </div>
            </div>
        </form>
    </div>
</div>
