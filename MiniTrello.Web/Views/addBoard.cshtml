@{
    PageData["title"] = "MiniTrello | Add Board";
}
<div class="row" ng-show="hasError">
    <p>{{errorMessage}}</p>
</div>
<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Add a New Board</h2>
                <hr class="colorgraph">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="title" id="title" ng-model="CreateNewBoardModel.Title" class="form-control input-lg" placeholder="Title" tabindex="1">
                    </div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <button type="submit" ng-click="createNewBoardForLoggedUser()" class="btn btn-primary btn-block btn-lg" tabindex="7">Add Board</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>