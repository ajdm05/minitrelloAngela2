@{
    PageData["title"] = "MiniTrello | Add Board";
}

<div class="row" ng-show="hasError">
    <p>{{errorMessage}}</p>
</div>

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <fieldset>
                <h2>Add a New Board</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    <input type="text" name="title" ng-model="addBoardModel.Title" id="title" class="form-control input-lg" placeholder="Title">
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button ng-click="createNewOrganizationForLoggedUser()" class="btn btn-lg btn-primary btn-block">Add Organization</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
