@{
    PageData["title"] = "MiniTrello | UpdateProfile";
}
<div class="row" ng-show="hasError">
    <p>{{errorMessage}}</p>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form role="form">
            <h2>Update Porfile <small>You're going to be updated.</small></h2>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="first_name" id="first_name" ng-model="updateProfileModel.FirstName" class="form-control input-lg" placeholder="First Name" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="last_name" id="last_name" ng-model="updateProfileModel.LastName" class="form-control input-lg" placeholder="Last Name" tabindex="2">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="user_name" id="user_name" ng-model="updateProfileModel.UserName" class="form-control input-lg" placeholder="User Name" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="bio" id="bio" ng-model="updateProfileModel.Bio" class="form-control input-lg" placeholder="Bio" tabindex="2">
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="initials" id="initials" ng-model="updateProfileModel.Initials" class="form-control input-lg" placeholder="Initials" tabindex="2">
                    </div>
                </div>
            </div>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <button type="submit" ng-click="updateProfile()" class="btn btn-primary btn-block btn-lg" tabindex="7">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>
