@{
    PageData["title"] = "MiniTrello | Cards";
}
<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-2">
            <form role="form">
                <fieldset>
                    <h2>Add a New Card</h2>
                    <hr class="colorgraph">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="title" id="text" ng-model="CreateNewCardModel.Text" class="form-control input-lg" placeholder="Text" tabindex="1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <button type="submit" ng-click="createNewCardForLoggedUser()" class="btn btn-primary btn-block btn-lg" tabindex="7">Add Board</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row" ng-repeat="card in cards">
        <div class="col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <img src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" alt="bootsnipp"
                             class="img-rounded img-responsive" />
                    </div>
                    <div class="col-xs-9 col-md-9 section-box">
                        <a href="/cards/{{board.Id}}">
                            <h2>
                                {{lane.Text}}
                            </h2>
                        </a>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>